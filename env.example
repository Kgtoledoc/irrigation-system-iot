# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/irrigation_db
DATABASE_TEST_URL=postgresql://user:password@localhost/irrigation_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Hardware Configuration
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=9600
SENSOR_PIN=36
RELAY_PIN=26
PUMP_DURATION=30  # seconds

# Irrigation Settings
MIN_HUMIDITY_THRESHOLD=30  # percentage
MAX_HUMIDITY_THRESHOLD=80  # percentage
WATERING_INTERVAL=3600  # seconds (1 hour)
MAX_WATERING_DURATION=300  # seconds (5 minutes)

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=irrigation/status

# Monitoring
ENABLE_LOGGING=True
LOG_LEVEL=INFO
METRICS_PORT=9090

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"] 